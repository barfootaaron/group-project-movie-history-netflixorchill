<div id="div--{{firebasekey}}" class="col s4 card-fixed">

	<div class="card hoverable">
	   <!-- card image -->
	  <div class="card-image waves-effect waves-block waves-light">
	    	<img class="activator" src="https://image.tmdb.org/t/p/w500/{{imgpath}}" id="img--{{id}}">
	    	<!-- <i class="material-icons right">close</i></span> -->
	  </div>

	  <!-- small data below image -->
		<div class="card-content">
          <span class="card-title activator grey-text text-darken-4 truncate" id="title--{{id}}">{{title}}</span>
          <p>{{release_date}}</p>
      </div>

	  <!-- log data when card clicked -->
	<div class="card-reveal">
		<span class="card-title grey-text text-darken-4">{{title}}

		<i class="material-icons right">close</i></span>

		<p id="year--{{id}}">{{release_date}}</p>
		<br>
		<p id="plot--{{id}}">{{overview}}</p>

	  </div>

	</div>

	<div class="ratings">
	    <i class="star small material-icons" id="{{firebasekey}}--star1">star</i>
	    <i class="star small material-icons" id="{{firebasekey}}--star2">star</i>
	    <i class="star small material-icons" id="{{firebasekey}}--star3">star</i>
	    <i class="star small material-icons" id="{{firebasekey}}--star4">star</i>
		<i class="star small material-icons" id="{{firebasekey}}--star5">star</i>
	</div>

	<div class="user_rate">You rated {{title}} - {{userrating}} stars</div>

	<button type="button" class="btn btn-flat waves-effect waves-yellow remove-movie" id="button--{{id}}">Remove from Watch List</button>


</div>

